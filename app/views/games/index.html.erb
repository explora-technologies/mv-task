<script type="text/javascript">
 $( document ).ready(function() {
        var game = new Array(4);
        arrayinit();
		// array initialize here (start)
		function arrayinit()
		{
			var counter = 0;
			for( var i=0;i<4;i++)
			{
				game[i] = new Array(4);
				for(var j=0;j<4;j++)
				{
					game[i][j] = '';
					
				}
			}
			randomappend()
			
		}
		// array initialize here (end)

		// function for randome text generation (start)
		function randomappend()
		{
			var array = [2,4,2,4,2,2,];
			var data_set = 0;
			for(var i=0;i<4;i++)
			{
				for(var j=0;j<4;j++)
				{
					if(!data_set)
					{
						data_set = 1;
						if(game[i][j] == '')
						{
							game[i][j] = array[Math.floor(Math.random()*array.length)];
							$('#'+i+j).html("<span style='background-color:red'>"+ game[i][j]+"</span>")
							
						}
						
					}
				}
			}
			dataappending()
		}
		// function for randome text generation (end)

		function dataappending()
		{
			var array = [];
			for(var i=0;i<4;i++)
			{
				for(var j=0;j<4;j++)
				{
					if(game[i][j] == '')
					{
						array.push(i + '-' + j);
					}	
				}
			}
			var str = array[Math.floor(Math.random()*array.length)]
			var res = str.split("-");
			var i =res[0];
			var j =res[1];
			game[i][j] = 2;
			$('#'+i+j).html("<span style='background-color:red'>"+ game[i][j]+"</span>");

		}
		$('#leftmove').click(function() {
			moveleft()
			dataappending()

		});
		$('#rightmove').click(function() {
			moveright();
			dataappending();
		});
		$('#upmove').click(function() {
			moveup()
			dataappending()

		});
		$('#downmove').click(function() {
			movedown()
			dataappending()
		});
		function moveup()
		{
			
			var k = 0;
			 while(k < 3)
			{

				for(var i=0;i<=2;i++)
				{
					for(var j=0;j<=3;j++)
					{
						if(game[i][j] == '')
						{
							game[i][j] = game[i+1][j]
							game[i+1][j] = '' 
							$('#'+i+''+j).html("<span style='background-color:#"+(995510+(game[i][j]*5))+";border:0px solid black;'>"+game[i][j]+"</span>");	
							$('#'+(i+1)+j).html('')
									
						}
						else
						{
							
						}
						
					}
				}
				k = k+1;

			 }
		}
		function moveleft()
		{
			var k = 0;
			while(k < 3)
			{
				for(var i=0;i<=3;i++)
				{
					for(var j=0;j<=2;j++)
					{
						if(game[i][j] === '')
						{
							game[i][j] = game[i][j+1];	
							game[i][j+1] = ''
							$('#'+i+''+j).html("<span style='background-color:#"+(995510+(game[i][j]*5))+";border:0px solid black;'>"+game[i][j]+"</span>");
							$('#'+i+''+(j+1)).html('')
						}
						else
						{
							
						}
						
					}
				}
				k = k+1;
			}
		}
		function moveright()
		{
			var k = 0;
			while(k < 3)
			{
				for(var i=0;i<=3;i++)
				{
					for(var j=3;j>=1;j--)
					{
						if(game[i][j] === '')
						{
							game[i][j] = game[i][j-1];	
							game[i][j-1] = ''
							$('#'+i+''+j).html("<span style='background-color:#"+(995510+(game[i][j]*5))+";border:0px solid black;'>"+game[i][j]+"</span>");
							$('#'+i+''+(j-1)).html('')

						}
						else
						{
							
						}
						
					}
				}
				k = k+1;
			}	
		}
		function movedown()
		{
			var k = 0;
			while(k < 3)
			{
				for(var i=3;i>=1;i--)
				{
					for(var j=0;j<=3;j++)
					{
						if(game[i][j] === '')
						{
							game[i][j] = game[i-1][j];	
							game[i-1][j] = ''
							$('#'+i+''+j).html("<span style='background-color:#"+(995510+(game[i][j]*5))+";border:0px solid black;'>"+game[i][j]+"</span>");
							$('#'+(i-1)+''+j).html('')
						}
						else
						{
							
						}

					}
				}
				k = k+1;
			}	
		}

	});
</script>